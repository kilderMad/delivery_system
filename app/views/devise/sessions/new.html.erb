

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:' h-[90%] items-center flex'}, data: { turbo: false }) do |f| %>
  <div class=' flex flex-col text-black bg-slate-300 justify-center items-center p-10 m-auto'>
    <h2 class=' text-2xl font-bold'>Login</h2>
    <div class='flex flex-col'>

      <div class="field pb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'rounded-2xl '%>
        <% if resource.errors.any?%>
            <p class=' text-red-600'><%= resource.errors.full_messages_for(:password_confirmation).first %></p>
        <% end %>
      </div>

      <div class="field pb-3">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:'rounded-2xl'%>
        <% if resource.errors.any?%>
            <p class=' text-red-600'><%= resource.errors.full_messages_for(:password_confirmation).first %></p>
        <% end %>
      </div>

    <div class=' text-left'>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

      <div class="btn-primary">
        <%= f.submit "Entrar", class:"actions px-1 bg-slate-500 w-24 rounded-lg text-center my-2 mx-auto cursor-pointer border-2 border-slate-600 text-white "%>
      </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>