<section  class=' pt-20 flex justify-center items-center h-full'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:' h-[90%] items-center flex'}, data: { turbo: false }) do |f| %>
    <div class=' flex flex-col text-black bg-slate-300 justify-center items-center p-10 m-auto'>
      <h2 class=' text-2xl font-bold'>Cadastro</h2>
      <div class='flex flex-col'>
        <div class="field pb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'rounded-2xl '%>
            <% if resource.errors.any?%>
              <p class=' text-red-600'><%= resource.errors.full_messages_for(:email).first %></p>
            <% end %>
        </div>

        <div class="field pb-3">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(no minimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:'rounded-2xl' %>
          <% if resource.errors.any?%>
              <p class=' text-red-600'><%= resource.errors.full_messages_for(:password).first %></p>
          <% end %>
        </div>

        <div class="field pb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'rounded-2xl' %>
          <% if resource.errors.any?%>
              <p class=' text-red-600'><%= resource.errors.full_messages_for(:password_confirmation).first %></p>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "Cadastrar", class:"btn-primary"%>
        </div>
        <div class='self-start'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  <% end %>
</section>
