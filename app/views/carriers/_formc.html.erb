<%= form_with model: @carrier, data: { turbo: false } do |f| %>

  <div class='field'>
    <%= f.label :fantasy_name %>
    <%= f.text_field :fantasy_name %>
    <% if @carrier.errors.any?%>
      <p><%= @carrier.errors.full_messages_for(:fantasy_name).first %></p>
    <% end %>
  </div>

  <div class='field'>
    <%= f.label :cnpj %>
    <%= f.text_field :cnpj %>
    <% if @carrier.errors.any?%>
      <p><%= @carrier.errors.full_messages_for(:cnpj).first %></p>
    <% end %>
  </div>

  <div class='field'>
    <%= f.label :domain %>
    <%= f.text_field :domain %>
    <% if @carrier.errors.any?%>
      <p><%= @carrier.errors.full_messages_for(:domain).first %></p>
    <% end %>
  </div>

  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <% if @carrier.errors.any?%>
      <p><%= @carrier.errors.full_messages_for(:email).first %></p>
    <% end %>
  </div>

  <div class='field'>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <% if @carrier.errors.any?%>
      <p><%= @carrier.errors.full_messages_for(:address).first %></p>
    <% end %>
  </div>
  <div class='button_send'>
    <%= f.submit 'Enviar'%>
  </div>
<% end %>