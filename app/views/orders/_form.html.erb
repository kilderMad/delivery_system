<section class=' pt-20 flex justify-center items-center h-full px-[3%]'>
  <%= form_with model: @order, html: {class:' h-[90%] items-center flex'}, data: { turbo: false } do |f| %>
    <div class=' flex flex-col text-black bg-slate-300 justify-center items-center px-10 py-6 m-auto'>
      <h2 class=' text-2xl font-bold pb-4'>Cadastro de Transportadora</h2>
      <div class='flex flex-col'>
      <div class='field pb-3'>
        <%= f.label :zip_code %><br />
        <%= f.text_field :zip_code, class:'rounded-2xl' %>
        <% if @order.errors.any?%>
          <p class=' text-red-600'><%= @order.errors.full_messages_for(:zip_code).first %></p>
        <% end %>
      </div>

      <div class='field pb-5'>
        <%= f.label :cubic_size %><br />
        <%= f.text_field :cubic_size, class:'rounded-2xl' %>
        <% if @order.errors.any?%>
          <p class=' text-red-600'><%= @order.errors.full_messages_for(:cubic_size).first %></p>
        <% end %>
      </div>

      <div class='field pb-5'>
        <%= f.label :pickup_address %><br />
        <%= f.text_field :pickup_address, class:'rounded-2xl' %>
        <% if @order.errors.any?%>
          <p class=' text-red-600'><%= @order.errors.full_messages_for(:pickup_address).first %></p>
        <% end %>
      </div>

      <div class='field pb-5'>
        <%= f.label :receiver_address %><br />
        <%= f.text_field :receiver_address, class:'rounded-2xl' %>
        <% if @order.errors.any?%>
          <p class=' text-red-600'><%= @order.errors.full_messages_for(:receiver_address).first %></p>
        <% end %>
      </div>
      <h1>Informações do destinatario</h1>
      <div class='field pb-5'>
        <%= f.label :receiver_name %><br />
        <%= f.text_field :receiver_name, class:'rounded-2xl' %>
        <% if @order.errors.any?%>
          <p class=' text-red-600'><%= @order.errors.full_messages_for(:receiver_name).first %></p>
        <% end %>
      </div>

      <div class='field pb-5'>
        <%= f.label :receiver_cpf %><br />
        <%= f.text_field :receiver_cpf, class:'rounded-2xl' %>
        <% if @order.errors.any?%>
          <p class=' text-red-600'><%= @order.errors.full_messages_for(:receiver_cpf).first %></p>
        <% end %>
      </div>

      <div class='field pb-5'>
        <%= f.label :receiver_phone %><br />
        <%= f.text_field :receiver_phone, class:'rounded-2xl' %>
        <% if @order.errors.any?%>
          <p class=' text-red-600'><%= @order.errors.full_messages_for(:receiver_phone).first %></p>
        <% end %>
      </div>

      <div class='field pb-5'>
        <%= f.label :carrier_id %><br />
        <%= f.collection_select :carrier_id, @carriers, :id, :fantasy_name %>
        <% if @order.errors.any?%>
          <p class=' text-red-600'><%= @order.errors.full_messages_for(:carrier_id).first %></p>
        <% end %>
      </div>

      <div class='button_send'>
        <%= f.submit 'Enviar', class: 'bg-blue-500 hover:bg-blue-700 text-white font-semibold py-1 px-3 rounded-xl text-sm cursor-pointer text-xl'%>
      </div>
    </div>
  </div>
  <% end %>
</section>
