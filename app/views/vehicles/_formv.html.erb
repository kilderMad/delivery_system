<section>
<%= form_with model: [:carrier, @vehicle], html: {class:' h-[90%] items-center flex'}, data: { turbo: false } do |f| %>
<div class=' flex flex-col text-black bg-slate-300 justify-center items-center px-10 py-6 m-auto'>
  <h2 class=' text-2xl font-bold pb-10'>Cadastro de Veiculo</h2>
  <div class='flex flex-col'>

  <div class='flex '>
    <div class='field pb-3 '>
      <%= f.label :brand %><br />
      <%= f.text_field :brand, class:'rounded-2xl max-w-[180px] mr-2' %>
      <% if @vehicle.errors.any?%>
        <p class=' text-red-600'><%= @vehicle.errors.full_messages_for(:brand).first %></p>
      <% end %>
    </div>

    <div class='field pb-5'>
      <%= f.label :model %><br />
      <%= f.text_field :model, class:'rounded-2xl max-w-[180px] ' %>
      <% if @vehicle.errors.any?%>
        <p class=' text-red-600'><%= @vehicle.errors.full_messages_for(:model).first %></p>
      <% end %>
    </div>
  </div>

  <div class="flex">
    <div class='field pb-5'>
      <%= f.label :plate %><br />
      <%= f.text_field :plate, class:'rounded-2xl max-w-[180px] mr-2' %>
      <% if @vehicle.errors.any?%>
        <p class=' text-red-600'><%= @vehicle.errors.full_messages_for(:plate).first %></p>
      <% end %>
    </div>

    <div class='field pb-5'>
      <%= f.label :year %><br />
      <%= f.text_field :year, class:'rounded-2xl max-w-[180px] ' %>
      <% if @vehicle.errors.any?%>
        <p class=' text-red-600'><%= @vehicle.errors.full_messages_for(:year).first %></p>
      <% end %>
    </div>
  </div>

  <div class='field pb-5'>
    <%= f.label :capacity %><br />
    <%= f.number_field :capacity, class:'rounded-2xl max-w-[180px] mr-2' %>
    <% if @vehicle.errors.any?%>
      <p class=' text-red-600'><%= @vehicle.errors.full_messages_for(:capacity).first %></p>
    <% end %>
  </div>
  
  <div class='button_send'>
    <%= f.submit 'Cadastrar', class: 'bg-blue-500 hover:bg-blue-700 text-white font-semibold py-1 px-2 h-8 rounded-xl text-sm cursor-pointer text-xl'%>
  </div>
<% end %>
</div>
</div>
</section>