<section class='pt-28 h-full px-[3%]'>
  <div class='bg-slate-300 p-5 flex flex-col justify-center items-center max-w-7xl mx-auto'>
    <h1 class='font-bold text-2xl pb-3'>Histórico</h1>
    <% unless @budget_histories.empty? %>
    <div class='flex flex-col'>
      <% @budget_histories.each do |result| %>
        <div class= 'py-3'>
          <%= result.carrier.fantasy_name %> - frete <%= number_to_currency(result.freight, unit: "R$") %> | CEP: <%= result.zip_code %> | <%= result.deadline %> dias úteis | <%= result.cubic_size %>M cúbicos
        </div>
      <% end %>
    </div>
    <% else %>
      <p>Sem historico</p>
    <% end %>
  </div>
</section>
